{
  "manifest_version": 3,
  "name": "SnapScraper",
  "version": "2.0",
  "description": "Download selected images from the page.",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "sidePanel",
    "downloads",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "image/download (1).png",
      "32": "image/download (1).png",
      "48": "image/download (1).png",
      "128": "image/download (1).png"
    },
    "default_title": "SnapScraper"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["jspdf.umd.min.js", "image/download (1).png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "image/download (1).png",
    "32": "image/download (1).png",
    "48": "image/download (1).png",
    "128": "image/download (1).png"
  }
}
